.container
    height calc(100vh - 54px - 60px)
    overflow-y: auto
    padding 10px

.chart-wrapper
    display grid
    flex-wrap: wrap
    // grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
    // grid-gap: 18px 18px;
    display flex
    justify-content: flex-start

.chart-block
    cursor pointer
    transition: all 0.4s
    margin-right 15px
    &:hover
        box-shadow: 0 0px 20px 3px rgba(83,89,102,0.12)
        .preview
            box-shadow: 0 0px 20px 3px transparent
    .preview
        width 140px
        position: relative;
        border-radius: 4px;
        // border: 1px solid #e8e8e8;
        box-shadow: 0 0px 20px 3px rgba(83,89,102,0.12)
    .name-box
        font-weight: 600
        height 40px
        line-height: 40px
        padding 0 10px

    