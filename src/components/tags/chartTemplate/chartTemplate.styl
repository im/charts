.chart-list
    display flex
    flex-wrap: wrap
.chart-block
    cursor pointer
    transition: all 0.4s
    margin 0 15px
    height: 154px;
    position relative
    .tag
        position absolute
        right 5px
        top 5px
        z-index 9
        font-size: 12px
        padding 2px 3px
        background: #F56C6C
        color #fff
        border-radius: 2px
    &:hover
        box-shadow: 0 0px 20px 3px rgba(83,89,102,0.12)
        .preview
            box-shadow: 0 0px 20px 3px transparent
    .preview
        width 140px
        position: relative;
        border-radius: 4px;
        // border: 1px solid #e8e8e8;
        box-shadow: 0 0px 20px 3px rgba(83,89,102,0.12)
    .name-box
        font-weight: 600
        height 40px
        line-height: 40px
        padding 0 10px

    