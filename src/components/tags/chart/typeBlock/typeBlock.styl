.type-block
    width 50px
    height: 100%
    background: #252625;
    position relative
    overflow hidden
    transition: all 0.3s
    .chart-list
        height calc(100% - 50px)
        width 100%
        overflow-y: auto
    &.expand
        width 280px;
        .bottom
            .iconfont
                transform: rotate(-90deg);
    .bottom
        position absolute
        bottom: 0
        left: 0
        width 100%
        height 50px
        line-height: 50px
        display flex
        align-items: center
        justify-content: center
        cursor pointer
        background: #252625;
        z-index 1
        border-top: 1px solid #303133
        .text
            margin-left 10px 
        .iconfont
            display inline-block
            position relative
            transform: rotate(90deg);
            transition: 0.3s
        &:hover
            color #fff
            background: #303133
            .iconfont
                color #fff
.chart-nav
    div
        width 50px
        height: 50px
        font-size: 24px
        cursor pointer
        display flex
        align-items: center
        justify-content: center
        &:hover
            background: #303133
        &.active
            background: #196ad4
            
            .iconfont 
                color #fff;
        .iconfont 
            font-weight: bold
.tab
    height 36px
    line-height: 36px
    font-size 12px
    cursor pointer
    padding: 0 14px
    display flex
    align-items: center
    &.open
        .iconfont 
            transform: rotate(90deg);
    .iconfont 
        font-size: 12px
        margin-right 4px
        transition: 0.3s
    &:hover
        background: #196ad4;
        color #fff
        .iconfont 
            color #fff
.chart-wrapper
    padding 18px
    display grid
    flex-wrap: wrap
    grid-template-columns: 1fr 1fr 
    grid-gap: 18px 18px;
.chart-block
    position relative
    height 100px
    border-radius: 4px
    overflow hidden
    border 3px solid transparent
    cursor pointer
    transition: all 0.2s
    &:hover, &.active
        border 3px solid #196ad4;
        .name-box
            left: 0
            top 0
            width 100%
            height 100%
            display flex
            align-items: center
            justify-content: center
            padding 0 10px
            background-color: rgba(76,118,147,.7);
            color #fff
        
    .preview, .el-image
        height 100%
    .name-box
        transition: 0.4s
        padding 0 10px
        position absolute
        bottom 0
        left: 0
        width 100%
        color #000
        font-size: 12px;
        font-weight: 600;
        color: #333;
        text-align: center
        white-space: nowrap;
        text-overflow: ellipsis
        overflow hidden