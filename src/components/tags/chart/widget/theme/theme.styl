.color
    width: 20px;
    height: 20px;
    border-radius: 3px;
.theme
    cursor pointer
    padding 5px 10px
    display flex
    width 100%
    justify-content: space-between
    transition: 0.3s
    border-radius: 3px;
    &.active
        background: #e6e0e0;
    &:hover
        background: #e6e0e0;
.background-color
    margin 10px 0
    font-size: 14px
    display flex
    align-items: center
    /deep/
        .el-color-picker
            margin-left 10px