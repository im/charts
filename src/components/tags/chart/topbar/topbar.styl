.topbar
    background-color: #303133;
    box-shadow: 0 1px 0 0 #141517;
    height: 50px;
    width 100%
    display flex
    align-items: center
    justify-content: space-between
    padding 0 10px
    position relative
    z-index  999
    .name
        cursor pointer
        font-size: 14px
        display flex
        align-items: center
        padding 0 4px
        .iconfont
            margin-left 5px
        &:hover
            background: rgba(255,255,255,0.2)
            border-radius: 4px