.preview-block
    height 100%
    flex 1
    overflow: auto
    padding 50px
    .v-chart-box
        background: #fff
        width 100%
        height: 100%
        position relative
    .play-btn
        position absolute
        left: 10px
        bottom 10px
        width: 56px
        height: 56px;
        border-radius: 10px
        background: rgba(0,0,0,0.5)
        text-align: center
        line-height: 56px
        cursor pointer
        transition: 0.3s
        &:hover
            background: rgba(0,0,0,0.8)
        .iconfont
            font-size: 20px
            font-weight: bold
            color #fff

