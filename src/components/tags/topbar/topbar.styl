.topbar
    width 100%
    height 64px 
    padding: 0 32px;
    display flex
    align-items: center
    justify-content: space-between
    box-shadow: 0 0 16px 0 rgba(72,73,76,.1);
    position fixed
    left: 0
    top 0
.logo
    font-size: 1.2em
   
    a
        display flex
        align-items: center
    &:hover
        img
            transform: rotate(-30deg);
    img
        transition: 0.6s
        height: 34px
        cursor pointer
        margin-right 10px

    